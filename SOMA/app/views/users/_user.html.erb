<tr>

  <td>
    <% if(user.activated?) %>
      <span class="glyphicon glyphicon-ok-sign"></span>
      <%= user.activated_at.to_formatted_s(:rfc822) %>
    <% else %>
      <span class="glyphicon glyphicon-minus-sign"></span>
    <% end %>
  </td>

  <td>
    <%= link_to user.name, user %>
  </td>

    <% if(current_user.admin? and !current_user?(user)) %>
      <td>
        <% if(user.activated?) %>
          <%= link_to "Desativar!", deactivate_path(user) , data: { confirm: "Tem certeza?" } %>
        <% else %>
          <%= link_to "Ativar!", activate_path(user) , data: { confirm: "Tem certeza?" } %>
        <% end %>
      </td>

      <td>
        <%= link_to content_tag(:span, "", class: "glyphicon glyphicon-trash"), user, method:"delete" , data: { confirm: "Tem certeza que deseja excluir permanentemente esse usuário? \nEssa ação não poderá ser desfeita." } %>
      </td>
    <% end %>
</tr>
