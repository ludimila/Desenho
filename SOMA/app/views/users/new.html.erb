<h1> Criar Novo Usu√°rio </h1>

<div class="row">
  <div class="col-lg-offset-3 col-sm-6 col-md-6">
    <%= form_for(@user) do |f| %>

      <%= render "errors" %>

      <%= f.label :name,"Nome Completo", class: "required" %>
      <%= f.text_field :name %>

      <%= f.label :email, class: "required" %>
      <%= f.text_field :email %>

      <%= f.label :cpf, "CPF",  class: "required" %>
      <%= f.text_field :cpf, maxlength: 11%>

      <%= f.label :rg, "RG", class: "required" %>
      <%= f.text_field :rg , maxlength: 11 %>

      <%= f.label :issuing_agency, "Orgao Emissor", class: "required" %>
      <%= f.text_field :issuing_agency, maxlength: 11%>
  
      <%= f.label :phone1, "Telefone", class: "required" %>
      <%= f.phone_field :phone1, maxlength: 11 %>

      <%= f.label :phone2, "Telefone Alternativo" %>
      <%= f.text_field :phone2, maxlength: 11 %>

      <%= f.label :zip_code, "CEP", class: "required" %>
      <%= f.text_field :zip_code, maxlength: 8 %>

      <%= f.label :street, "Logradouro" %>
      <%= f.text_field :street, disabled: true %>

      <%= f.label :number, "Numero" %>
      <%= f.text_field :number, maxlength: 5 %>

      <%= f.label :district, "Bairro" %>
      <%= f.text_field :district, disabled: true %>

      <%= f.label :city, "Cidade" %>
      <%= f.text_field :city, disabled: true %>

      <%= f.label :state, "Estado" %>
      <%= f.text_field :state, maxlength: 3,  disabled: true %>

      <div class="center">
        <%= f.submit "Criar conta", class: "btn btn-default btn-medium btn-primary" %>
        <%= link_to "Cancelar", root_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
