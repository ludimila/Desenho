<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
      <h1> Painel de Controle </h1>
      <h3>Ative ou desative um usu√°rio.</h3>
      <div class="input-group col-lg-11">
        <%= form_tag(users_path, method: "get") do %>
          <%= text_field_tag "search", "", {class: "form-control", placeholder: "Digite uma parte do nome desejado"} %>
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
          </span>
          <% end %>
        </div><!-- /input-group -->
       <br />

       <table class="table table-bordered table-striped">
         <tr>
           <th><%= "Status" %></th>
           <th><%= "Nome" %></th>
           <th><%= "Mudar Status" %></th>
           <th></th>
         </tr>

         <%= render @users %>
       </table>

       <%= "Legenda: " %>
       <table>
        <tr>
          <td><span class="glyphicon glyphicon-ok-sign"></span></td>
            <br>
          <td><%= " Ativado" %></td>
        </tr>
        <tr>
        <tr>
          <td><span class="glyphicon glyphicon-minus-sign"></span></td>
          <td><%= " Desativado" %></td>
        </tr>
        <tr>
          <td><span class="glyphicon glyphicon-trash"></span></td>
          <td><%= " Excluir" %></td>
        </tr>

      </table>

 </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

