<table class="table table-bordered table-striped">
  <tr class=>
    <th><%= "Curso" %></th>
    <th><%= "Carga Horária" %></th>
    <th><%= "Alunos" %></th>
    <th></th>
  </tr>

  <% @user.courses.each do |course| %>
    <tr >
      <td class="col-md-11">
        <%= link_to course.name, course %>
      </td>

      <td>
        <%= course.workload.to_s %>
      </td>

      <td>
        <%= course.students.size %>
      </td>

      <td>
        <%= link_to content_tag(:span, "", class: "fa fa-trash-o"), course, method:"delete" , data: { confirm: "Tem certeza que deseja excluir permanentemente este curso? \nEssa ação não poderá ser desfeita." } %>
      </td>
    </tr>
  <% end %>
</table>
