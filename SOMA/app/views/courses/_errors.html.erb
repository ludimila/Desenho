<% if @course.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
	    Este formulário contém <%= pluralize(@course.errors.count, "erro") %>.
	</div>
    <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li> * <%= msg %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
