<%= form_for(:session, url: sessions_path) do |f| %>
  <%= f.text_field :login, placeholder: "Email ou Login", class: "input-group form-control input-lg" %>
  <%= f.password_field :password, placeholder:"Senha", class: "input-group form-control input-lg" %>

  <%= f.submit "Entrar", class: "btn btn-primary btn-lg btn-block" %>
<% end %>
